{
  "$schema": "http://json.schemastore.org/template",
  "author": "rosslight GmbH",
  "classifications": [ "Avalonia" , "Desktop", "NativeAot", "rosslight", "darp" ],
  "identity": "Darp.Avalonia",
  "name": "The rosslight template for cross-platform desktop applications using Avalonia",
  "shortName": "darp.avalonia.desktop",
  "sourceName": "AvaloniaExampleProject",
  "defaultName": "RosslightAvaloniaApplication",
  "tags": {
    "language": "C#",
    "type": "solution"
  },
  "preferNameDirectory": true,
  "sources": [
    {
      "source": "./",
      "include": [
        ".config/**",
        ".github/**",
        "src/**",
        "test/**",
        ".editorconfig",
        ".gitattributes",
        ".gitignore",
        ".releaserc",
        "AvaloniaExampleProject.slnx",
        "Directory.Build.props",
        "Directory.Packages.props",
        "global.json",
        "nuget.config",
        "README.md"
      ],
      "exclude": [
        ".github/workflows/publish-template.yml",
        "**/[Bb]in/**",
        "**/[Oo]bj/**"
      ]
    }
  ]
}
